{
  "name": "tessera.js",
  "version": "0.3.0",
  "description": "tabula cerata - a mutable frame buffer that you wipe and rewrite X times a second.",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:js": "rollup -c && node scripts/copy-prebuilds.js",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run build:js && npm run build:types",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://github.com/sklyt/render/tree/main",
  "keywords": [
    "raylib",
    "raylib.js",
    "node.js",
    "renderer.js",
    "pixel",
    "graphics",
    "raytracer",
    "raster",
    "rasterization"
  ],
  "author": "sk",
  "license": "GPL-3.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.2",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "sea-builder": "^0.0.2",
    "typescript": "^5.9.3"
  }
}
